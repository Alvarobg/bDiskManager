<UserControl x:Class="bDisk.UserControls.TreeViewExplorerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bDisk.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="521" d:DesignWidth="300">
    <Grid>
        <Border Background="Black" BorderBrush="Black"/>
        <DockPanel>
            <Grid DockPanel.Dock="Bottom" Height="30" Background="White">
                <Border Background="Black" BorderBrush="Black"/>


            </Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TreeView x:Name="MainTreeView" Margin="0" ItemsSource="{Binding TreeViewItemList}" BorderBrush="{x:Null}"/>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
