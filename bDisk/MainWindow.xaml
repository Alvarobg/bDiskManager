<Window x:Class="bDisk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bDisk"
        xmlns:uc="clr-namespace:bDisk.UserControls"
        mc:Ignorable="d"
        Title="bDisk" Height="600" Width="800"
        WindowState="Normal" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top" Height="25"/>
            <Grid DockPanel.Dock="Bottom" Height="25"/>
            <Grid>
                <DockPanel>
                    <uc:TreeViewExplorerUC x:Name="treeViewExplorer" Width="300"/>
                    <uc:ElementViewerUC Margin="10,0,0,0"/>
                </DockPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
